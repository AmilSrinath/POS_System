<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.Cursor?>
<AnchorPane prefHeight="1024.0" prefWidth="1680.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pos.system.project.controller.DashboardController" styleClass="root" stylesheets="@../Styles/CSS.css">
   <children>
      <AnchorPane prefHeight="102.0" prefWidth="1681.0" styleClass="home-top-bar">
         <children>
            <Label layoutX="1171.0" layoutY="35.0" text="Date" textFill="WHITE">
               <font>
                  <Font name="Poppins Regular" size="22.0" />
               </font>
            </Label>
            <Label layoutX="1240.0" layoutY="35.0" text="12-12-2024" textFill="WHITE">
               <font>
                  <Font name="Poppins Regular" size="22.0" />
               </font>
            </Label>
            <Label layoutX="1419.0" layoutY="35.0" text="Time" textFill="WHITE">
               <font>
                  <Font name="Poppins Regular" size="22.0" />
               </font>
            </Label>
            <Label layoutX="1489.0" layoutY="35.0" text="13:45" textFill="WHITE">
               <font>
                  <Font name="Poppins Regular" size="22.0" />
               </font>
            </Label>
            <Label layoutX="129.0" layoutY="30.0" text="Dashboard" textFill="WHITE">
               <font>
                  <Font name="Poppins Regular" size="29.0" />
               </font>
            </Label>
            <Button fx:id="btnBack" layoutX="25.0" layoutY="20.0" mnemonicParsing="false" onAction="#btnBackOnAction" prefHeight="62.0" prefWidth="65.0" styleClass="back-button" stylesheets="@../Styles/CSS.css">
               <graphic>
                  <ImageView fitHeight="42.0" fitWidth="53.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../assest/icon/icons8-back-100.png" />
                     </image>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </AnchorPane>

      <!-- Key Metrics Section -->
      <AnchorPane layoutY="150.0" layoutX="200.0" prefHeight="500.0" prefWidth="1200.0">
         <children>
            <!-- Card for Today's Sales -->
            <AnchorPane layoutX="100.0" layoutY="50.0" prefWidth="400.0" prefHeight="200.0" styleClass="metric-card">
               <children>
                  <Label layoutX="20.0" layoutY="20.0" text="Today's Sales" textFill="BLACK">
                     <font>
                        <Font name="Poppins Regular" size="28.0" />
                     </font>
                  </Label>
                  <Label layoutX="20.0" layoutY="100.0" text="Rs 1200" textFill="GREEN">
                     <font>
                        <Font name="Poppins Regular" size="48.0" />
                     </font>
                  </Label>
               </children>
            </AnchorPane>

            <!-- Card for Profit -->
            <AnchorPane layoutX="700.0" layoutY="50.0" prefWidth="400.0" prefHeight="200.0" styleClass="metric-card">
               <children>
                  <Label layoutX="20.0" layoutY="20.0" text="Profit" textFill="BLACK">
                     <font>
                        <Font name="Poppins Regular" size="28.0" />
                     </font>
                  </Label>
                  <Label layoutX="20.0" layoutY="100.0" text="Rs 1200" textFill="BLUE">
                     <font>
                        <Font name="Poppins Regular" size="48.0" />
                     </font>
                  </Label>
               </children>
            </AnchorPane>
         </children>
      </AnchorPane>

      <!-- Buttons for other features -->
      <Button fx:id="btnSalesHistory" layoutX="900.0" layoutY="700.0" mnemonicParsing="false" text="Sales History" />
      <Button fx:id="btnReports" layoutX="1000.0" layoutY="700.0" mnemonicParsing="false" text="Reports" />
   </children>
</AnchorPane>
